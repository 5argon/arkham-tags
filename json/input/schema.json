{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "code": {
        "type": "string",
        "description": "The arkhamdb unique code of the card."
      },
      "name": {
        "type": "string",
        "description": "The name of the card."
      },
      "text": {
        "type": "string",
        "description": "The game effect text of the card."
      },
      "tags": {
        "type": "array",
        "description": "A list of tags that this card has.",
        "items": {
          "$ref": "../output/schema.tags.json"
        }
      }
    },
    "required": ["code", "name", "text", "tags"]
  }
}
